# Environment Configuration for Tusenfryd Amusement Park

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tusenfryd
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tusenfryd

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@tusenfryd.no
ADMIN_PASSWORD=admin123

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Tusenfryd <noreply@tusenfryd.no>

# File Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_NAME=tusenfryd-session

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Park Configuration
PARK_NAME=Tusenfryd
PARK_TIMEZONE=Europe/Oslo
DEFAULT_OPEN_TIME=09:00
DEFAULT_CLOSE_TIME=18:00

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:3000/api

# Feature Flags
ENABLE_RESERVATIONS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# Development Configuration
DEBUG=true
LOG_LEVEL=debug

# Production Configuration (comment out for development)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=error
# MONGODB_URI=mongodb+srv://production-cluster.mongodb.net/tusenfryd
