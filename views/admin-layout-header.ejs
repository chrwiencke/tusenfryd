<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Tusenfryd Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#64748b',
                        admin: {
                            dark: '#1f2937',
                            gray: '#374151'
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <%- typeof(additionalCSS) !== 'undefined' ? additionalCSS : '' %>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-gray-900 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/admin" class="flex items-center space-x-2 text-white font-bold text-xl hover:text-gray-100 transition-colors">
                        <i class="bi bi-shield-check text-blue-400"></i>
                        <span>Tusenfryd Admin</span>
                    </a>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white transition-colors" id="mobile-menu-button">
                        <i class="bi bi-list text-xl"></i>
                    </button>
                </div>

                <!-- Desktop navigation -->
                <% if (typeof(user) !== 'undefined' && user) { %>
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/admin" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/admin/attractions" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-star"></i>
                        <span>Attractions</span>
                    </a>
                    <a href="/admin/reservations" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-calendar-check"></i>
                        <span>Reservations</span>
                    </a>
                    <a href="/admin/notifications" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-bell"></i>
                        <span>Notifications</span>
                    </a>
                    <a href="/admin/settings" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                    </a>
                    <a href="/admin/faq" class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors">
                        <i class="bi bi-question-circle"></i>
                        <span>FAQ</span>
                    </a>
                    
                    <!-- User dropdown -->
                    <div class="relative">
                        <button type="button" class="flex items-center space-x-2 text-gray-300 hover:text-white transition-colors" id="user-menu-button">
                            <i class="bi bi-person-circle"></i>
                            <span><%= user.username %></span>
                            <i class="bi bi-chevron-down text-xs"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50 hidden" id="user-menu">
                            <a href="/" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="bi bi-house mr-2"></i>
                                View Site
                            </a>
                            <a href="/admin/profile" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="bi bi-person mr-2"></i>
                                Profile
                            </a>
                            <hr class="my-1">
                            <a href="/admin/logout" class="flex items-center px-4 py-2 text-red-600 hover:bg-red-50 transition-colors">
                                <i class="bi bi-box-arrow-right mr-2"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Mobile navigation menu -->
            <div class="md:hidden hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-700">
                    <% if (typeof(user) !== 'undefined' && user) { %>
                    <a href="/admin" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/admin/attractions" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-star"></i>
                        <span>Attractions</span>
                    </a>
                    <a href="/admin/reservations" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-calendar-check"></i>
                        <span>Reservations</span>
                    </a>
                    <a href="/admin/notifications" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-bell"></i>
                        <span>Notifications</span>
                    </a>
                    <a href="/admin/settings" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                    </a>
                    <a href="/admin/faq" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-question-circle"></i>
                        <span>FAQ</span>
                    </a>
                    <hr class="my-2 border-gray-700">
                    <a href="/" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-house"></i>
                        <span>View Site</span>
                    </a>
                    <a href="/admin/profile" class="flex items-center space-x-2 px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-person"></i>
                        <span>Profile</span>
                    </a>
                    <a href="/admin/logout" class="flex items-center space-x-2 px-3 py-2 text-red-400 hover:text-red-300 hover:bg-gray-700 rounded-md transition-colors">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof messages !== 'undefined' && messages) { %>
        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert" id="success-alert">
                <span class="block sm:inline"><%= messages.success %></span>
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="closeAlert('success-alert')">
                    <i class="bi bi-x text-lg cursor-pointer"></i>
                </span>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert" id="error-alert">
                <span class="block sm:inline"><%= messages.error %></span>
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="closeAlert('error-alert')">
                    <i class="bi bi-x text-lg cursor-pointer"></i>
                </span>
            </div>
        <% } %>
        <% if (messages.warning) { %>
            <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert" id="warning-alert">
                <span class="block sm:inline"><%= messages.warning %></span>
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="closeAlert('warning-alert')">
                    <i class="bi bi-x text-lg cursor-pointer"></i>
                </span>
            </div>
        <% } %>
        <% if (messages.info) { %>
            <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert" id="info-alert">
                <span class="block sm:inline"><%= messages.info %></span>
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="closeAlert('info-alert')">
                    <i class="bi bi-x text-lg cursor-pointer"></i>
                </span>
            </div>
        <% } %>
    <% } %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
