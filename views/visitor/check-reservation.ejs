<%- include('../layout-header', { 
    title: 'Check Reservation'
}) %>

<div class="flex justify-center">
    <div class="w-full max-w-lg">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
            <h2 class="text-2xl font-bold text-center mb-6 flex items-center justify-center space-x-2">
                <i class="bi bi-search text-primary-600"></i>
                <span>Check Your Reservations</span>
            </h2>
            
            <p class="text-gray-600 text-center mb-6">
                Enter your email address to view all your active queue reservations.
            </p>
            
            <form method="GET" action="/check-reservation" class="space-y-6">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-lg" 
                           id="email" name="email" placeholder="Enter your email address..." required>
                </div>
                
                <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-semibold text-lg transition-colors flex items-center justify-center space-x-2">
                    <i class="bi bi-search"></i>
                    <span>Check Reservations</span>
                </button>
            </form>
            
            <hr class="border-gray-300 my-6">
            
            <div class="text-center">
                <h6 class="text-gray-600 mb-4">Don't have any reservations yet?</h6>
                <a href="/attractions" class="border border-primary-600 text-primary-600 hover:bg-primary-50 px-6 py-2 rounded-lg font-medium transition-colors flex items-center justify-center space-x-2">
                    <i class="bi bi-star"></i>
                    <span>Browse Attractions</span>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../layout-footer') %>
