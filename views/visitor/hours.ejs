<%- include('../layout-header', { 
    title: 'Opening Hours'
}) %>

<div class="max-w-4xl mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 flex items-center space-x-2">
        <i class="bi bi-clock text-primary-600"></i>
        <span>Opening Hours</span>
    </h1>

    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Regular Operating Hours</h2>
        <p class="text-gray-700 text-lg flex items-center">
            <i class="bi bi-clock-history text-primary-500 mr-2"></i>
            <span><%= parkHours.open %> - <%= parkHours.close %></span>
        </p>
    </div>

    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Days Open</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
            <% const dayLabels = { monday: 'Monday', tuesday: 'Tuesday', wednesday: 'Wednesday', thursday: 'Thursday', friday: 'Friday', saturday: 'Saturday', sunday: 'Sunday' }; %>
            <% Object.keys(dayLabels).forEach(day => { %>
            <div class="flex items-center space-x-2">
                <% if (parkHours.days.includes(day)) { %>
                    <i class="bi bi-check-circle-fill text-green-500"></i>
                    <span class="text-gray-800"><%= dayLabels[day] %></span>
                <% } else { %>
                    <i class="bi bi-x-circle-fill text-red-500"></i>
                    <span class="text-gray-500"><%= dayLabels[day] %></span>
                <% } %>
            </div>
            <% }) %>
        </div>
    </div>

    <% if (parkHours.note) { %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg">
        <div class="flex items-center">
            <i class="bi bi-info-circle-fill text-yellow-600 mr-2"></i>
            <h3 class="text-lg font-medium text-yellow-800">Special Hours Note</h3>
        </div>
        <p class="mt-2 text-yellow-700"><%= parkHours.note %></p>
    </div>
    <% } %>
</div>

<%- include('../layout-footer') %>
