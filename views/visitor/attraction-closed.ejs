<%- include('../layout-header', { 
    title: 'Attraction Closed', 
    user: typeof(user) !== 'undefined' ? user : null
}) %>

<div class="text-center mb-8">
    <div class="mb-6">
        <i class="bi bi-exclamation-triangle-fill text-yellow-500 text-6xl"></i>
    </div>
    
    <h1 class="text-2xl md:text-3xl font-bold text-yellow-600 mb-3">Attraction Currently Closed</h1>
    <p class="text-lg text-gray-600 mb-6">Unfortunately, <strong class="text-gray-900"><%= attraction.name %></strong> is not currently accepting reservations.</p>
</div>

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <div class="p-6 text-center">
                <h4 class="text-xl font-semibold text-gray-900 mb-4"><%= attraction.name %></h4>
                
                <% if (attraction.status === 'closed') { %>
                    <div class="text-red-500 mb-4">
                        <i class="bi bi-x-circle-fill text-4xl"></i>
                    </div>
                    <h5 class="text-lg font-semibold text-red-600 mb-2">Temporarily Closed</h5>
                    <p class="text-gray-600 mb-4">This attraction is currently not operating. Please check back later or visit our other attractions.</p>
                <% } else if (attraction.status === 'maintenance') { %>
                    <div class="text-yellow-500 mb-4">
                        <i class="bi bi-tools text-4xl"></i>
                    </div>
                    <h5 class="text-lg font-semibold text-yellow-600 mb-2">Under Maintenance</h5>
                    <p class="text-gray-600 mb-4">This attraction is currently undergoing maintenance for your safety. We'll have it running again as soon as possible!</p>
                <% } %>
                
                <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                    <h6 class="font-medium text-gray-900 mb-2">Attraction Details</h6>
                    <div class="text-sm text-gray-600 space-y-1">
                        <div><span class="font-medium">Category:</span> <%= attraction.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) %></div>
                        <div><span class="font-medium">Normal Hours:</span> <%= attraction.openingHours.start %> - <%= attraction.openingHours.end %></div>
                    </div>
                </div>
                
                <div class="border-t border-gray-200 mt-6 pt-6">
                    <div class="space-y-3">
                        <a href="/attractions" class="w-full inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="bi bi-star mr-2"></i>
                            Browse Other Attractions
                        </a>
                        <a href="/attractions/<%= attraction._id %>" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 font-medium rounded-lg transition-colors">
                            <i class="bi bi-info-circle mr-2"></i>
                            View Attraction Details
                        </a>
                        <a href="/" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 font-medium rounded-lg transition-colors">
                            <i class="bi bi-house mr-2"></i>
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layout-footer') %>
