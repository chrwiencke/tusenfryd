<div class="max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            <i class="bi bi-question-circle text-primary-600 mr-3"></i>
            Vanlige spørsmål
        </h1>
        <p class="text-lg text-gray-600">Finn svar på de mest stilte spørsmålene om Tusenfryd</p>
    </div>

    <!-- Quick Navigation -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Finn svar på:</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="#reservations" class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="bi bi-calendar-check text-primary-600 mr-3"></i>
                <span class="font-medium">Reservasjoner</span>
            </a>
            <a href="#attractions" class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="bi bi-star text-green-600 mr-3"></i>
                <span class="font-medium">Attraksjoner</span>
            </a>
            <a href="#tickets" class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
