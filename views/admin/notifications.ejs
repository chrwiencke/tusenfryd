<%- include('../admin-layout-header', { 
    title: 'Notifications', 
    pageTitle: 'Notification Management',
    user: user
}) %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
        <!-- Create Notification Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">Create New Notification</h5>
            </div>
            <div class="p-6">
                <form action="/admin/notifications" method="POST" class="space-y-4">
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Title *</label>
                        <input type="text" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                               id="title" name="title" required
                               placeholder="e.g., Important Park Update">
                        <% if (locals.errors && errors.title) { %>
                            <div class="text-red-600 text-sm mt-1"><%= errors.title.msg %></div>
                        <% } %>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
                        <textarea class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                  id="message" name="message" rows="4" required
                                  placeholder="Enter your notification message..."></textarea>
                        <% if (locals.errors && errors.message) { %>
                            <div class="text-red-600 text-sm mt-1"><%= errors.message.msg %></div>
                        <% } %>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="type" class="block text-sm font-medium text-gray-700 mb-2">Type *</label>
                            <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                    id="type" name="type" required>
                                <option value="">Select type...</option>
                                <option value="info">Info</option>
                                <option value="warning">Warning</option>
                                <option value="success">Success</option>
                                <option value="error">Error</option>
                            </select>
                            <% if (locals.errors && errors.type) { %>
                                <div class="text-red-600 text-sm mt-1"><%= errors.type.msg %></div>
                            <% } %>
                        </div>
                        <div>
                            <label for="priority" class="block text-sm font-medium text-gray-700 mb-2">Priority *</label>
                            <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                    id="priority" name="priority" required>
                                <option value="">Select priority...</option>
                                <option value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                                <option value="urgent">Urgent</option>
                            </select>
                            <% if (locals.errors && errors.priority) { %>
                                <div class="text-red-600 text-sm mt-1"><%= errors.priority.msg %></div>
                            <% } %>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="expiresAt" class="block text-sm font-medium text-gray-700 mb-2">Expires At</label>
                            <input type="datetime-local" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                   id="expiresAt" name="expiresAt">
                            <small class="text-gray-500 text-sm">Leave empty for permanent notification</small>
                        </div>
                        <div class="flex items-end">
                            <div class="flex items-center">
                                <input class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" 
                                       type="checkbox" id="isActive" name="isActive" checked>
                                <label class="ml-2 text-sm text-gray-700" for="isActive">
                                    Active (visible to visitors)
                                </label>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                        <i class="fas fa-plus mr-2"></i> Create Notification
                    </button>
                </form>
            </div>
        </div>

        <!-- Active Notifications -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">All Notifications</h5>
            </div>
            <div class="p-6">
                <% if (notifications && notifications.length > 0) { %>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notification</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% notifications.forEach(notification => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4">
                                        <div class="text-sm font-medium text-gray-900"><%= notification.key %></div>
                                        <div class="text-sm text-gray-500">
                                            <%= notification.description && notification.description.length > 60 ? notification.description.substring(0, 60) + '...' : (notification.description || '') %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                            <%= notification.category === 'notification' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                                            <%= notification.category.charAt(0).toUpperCase() + notification.category.slice(1) %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                            Normal
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (notification.isActive) { %>
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                        <% } else { %>
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= new Date(notification.createdAt).toLocaleDateString() %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <% if (notification.isActive) { %>
                                                <button class="text-orange-600 hover:text-orange-900" 
                                                        onclick="toggleNotification('<%= notification._id %>', false)"
                                                        title="Deactivate">
                                                    <i class="fas fa-pause"></i>
                                                </button>
                                            <% } else { %>
                                                <button class="text-green-600 hover:text-green-900" 
                                                        onclick="toggleNotification('<%= notification._id %>', true)"
                                                        title="Activate">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            <% } %>
                                            <button class="text-red-600 hover:text-red-900" 
                                                    onclick="deleteNotification('<%= notification._id %>')"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-8">
                        <i class="fas fa-bell-slash text-3xl text-gray-400 mb-3"></i>
                        <p class="text-gray-500">No notifications created yet</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="lg:col-span-1">
        <!-- Statistics Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">Notification Statistics</h5>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 gap-4 text-center">
                    <div class="mb-4">
                        <h4 class="text-2xl font-bold text-green-600"><%= stats.active || 0 %></h4>
                        <small class="text-gray-500">Active</small>
                    </div>
                    <div class="mb-4">
                        <h4 class="text-2xl font-bold text-orange-600"><%= stats.inactive || 0 %></h4>
                        <small class="text-gray-500">Inactive</small>
                    </div>
                    <div>
                        <h4 class="text-2xl font-bold text-gray-600"><%= stats.expired || 0 %></h4>
                        <small class="text-gray-500">Expired</small>
                    </div>
                    <div>
                        <h4 class="text-2xl font-bold text-blue-600"><%= stats.total || 0 %></h4>
                        <small class="text-gray-500">Total</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notification Types Guide -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">Notification Guide</h5>
            </div>
            <div class="p-6">
                <h6 class="text-sm font-semibold text-gray-900 mb-3">Types:</h6>
                <ul class="space-y-2 mb-6">
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 mr-2">Info</span>
                        <span class="text-sm text-gray-600">General information</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 mr-2">Warning</span>
                        <span class="text-sm text-gray-600">Important notices</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 mr-2">Success</span>
                        <span class="text-sm text-gray-600">Positive updates</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 mr-2">Error</span>
                        <span class="text-sm text-gray-600">Critical issues</span>
                    </li>
                </ul>

                <h6 class="text-sm font-semibold text-gray-900 mb-3">Priorities:</h6>
                <ul class="space-y-2">
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 mr-2">Low</span>
                        <span class="text-sm text-gray-600">Minor updates</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 mr-2">Medium</span>
                        <span class="text-sm text-gray-600">Standard notices</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 mr-2">High</span>
                        <span class="text-sm text-gray-600">Important alerts</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 mr-2">Urgent</span>
                        <span class="text-sm text-gray-600">Critical messages</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
function toggleNotification(notificationId, isActive) {
    const action = isActive ? 'activate' : 'deactivate';
    if (confirm(`Are you sure you want to ${action} this notification?`)) {
        fetch(`/admin/notifications/${notificationId}/toggle`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ isActive })
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to update notification status');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while updating the notification');
        });
    }
}

function deleteNotification(notificationId) {
    if (confirm('Are you sure you want to delete this notification? This action cannot be undone.')) {
        fetch(`/admin/notifications/${notificationId}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to delete notification');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while deleting the notification');
        });
    }
}
</script>

<%- include('../admin-layout-footer') %>
